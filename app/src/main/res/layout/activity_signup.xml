<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        tools:context=".Signup">
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="184dp"
            android:layout_height="175dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/stars_foreground"
            android:contentDescription="@string/stars_image" />

        <TextView
            android:id="@+id/sign_up_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="152dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/sign_up_text"
            android:textColor="#FFFFFF"
            android:textSize="33sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="320dp"
            android:layout_height="42dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/sign_up_intro"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_up_textview" />

        <EditText
            android:id="@+id/fullNameInput"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:autofillHints="name"
            android:backgroundTint="#9F9F9F"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="@string/enter_name_signup_text"
            android:inputType="textPersonName"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.38"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:autofillHints="emailAddress"
            android:backgroundTint="#9F9F9F"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="@string/enter_email_signup_text"
            android:inputType="textEmailAddress"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.38"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ageInput" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:autofillHints="password"
            android:backgroundTint="#9F9F9F"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="@string/enter_password_signup_text"
            android:inputType="textPassword"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.38"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailInput" />

        <EditText
            android:id="@+id/ageInput"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#9F9F9F"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="@string/enter_age_signup_text"
            android:inputType="number"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.38"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fullNameInput" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_button"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_corners_darkgray_background"
            android:fontFamily="@font/poppins"
            android:paddingLeft="22sp"
            android:paddingTop="4sp"
            android:paddingRight="22sp"
            android:paddingBottom="4sp"
            android:text="@string/continue_button_text"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.38"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordInput" />

        <Button
            android:id="@+id/alreadyHasAccountButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/already_has_account_text"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.162"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_button" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="169dp"
            android:layout_height="169dp"
            android:layout_marginStart="292dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/sign_up_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/moon_image_foreground"
            android:contentDescription="@string/moon_image"/>

        <TextView
            android:id="@+id/errorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/empty_fields_error"
            android:visibility="invisible"
            android:textColor="#DC4646"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alreadyHasAccountButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>